@model Web.Models.AddRestaurantCategoryViewModel
@{
    ViewData["Title"] = "AddRestaurantCategory";
}

<h1>Add Restaurant Category</h1>
<h2 style="color:red;">@ViewBag.Error</h2>
@using (Html.BeginForm("AddRestaurantCategory", "Restaurants", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class=" col-md-6">
            @Html.EditorFor(m => m.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Priority)
        </div>
        <div class=" col-md-6">
            @Html.EditorFor(m => m.Priority)
        </div>
    </div>

    <div>
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}

