@model Web.Models.CreateAreaViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Area</h1>

@using (Html.BeginForm("Create", "Area", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class=" col-md-6">
            @Html.EditorFor(m => m.Name)
        </div>
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>
}